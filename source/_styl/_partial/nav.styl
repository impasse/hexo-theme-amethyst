nav
  background white
  border-bottom 1px solid $border-color
  padding 0 1rem
  ul
    display flex
    padding 0
    margin 0
    li
      color $main-color
      font-size .725rem
      display block
      list-style-type none
      height $nav-height
      line-height $nav-height
      margin 0 1rem
      &.active
        border-bottom 2px solid black
      &:hover
        opacity .5
      a
        text-transform uppercase
        display block
        height auto