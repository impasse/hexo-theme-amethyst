$link-color = black
$border-color = #f2f2f2
$main-color = #5A5A5A
$nav-height = 64px
$body-margin = 30px


div
  box-sizing border-box
a,a:active,a:visited
  text-decoration none
  color $link-color
  &:hover
    opacity .5
i.fa
  margin-right 10px
.tags
  i, a
    color #bbb
    margin-right 10px


html, body
  margin 0
  border 0
  height 100%
  color rgba(0, 0, 0, .5)
body
  display: flex
  flex-flow row
  font-size 15px
  font-family 'source-han-sans-simplified-c', 'PingFang SC', 'Hiragino Sans GB', 'PingHei', 'Open Sans', sans-serif, Helvetica Neue, 'Work Sans', 'Microsoft YaHei', SimSun
  -webkit-font-smoothing antialiased
  animation slowShow 1s cubic-bezier(0, 0, 0.2, 1)
#sidebar
  display flex
  width 40%
  background #fff
  flex-flow column
  align-items center
  padding-top 16%
  overflow hidden
  border-right 1px solid $border-color
  & > div,img
    width auto
    text-align center
  #logo
    width 160px
    height @width
    border-radius 999em
  .fat
    flex 1 1 auto
  #site_name
    color #464646
    margin 10px 0
    height 32px
    line-height @height
    font-size 1.6rem
    font-weight bold
    text-transform uppercase
  #site_description
    color #565654
    font-style italic
    overflow-y auto
    padding 10px 50px
  #socials > a
    margin 0 5px
  #copyright
    color #A6A6A6
    margin-bottom 20px
    font-size 10px
main
  flex 1
  overflow hidden
  & > *:nth-child(2)
    height "calc(100vh - %s)" % $nav-height
  nav
    background white
    border-bottom 2px solid $border-color
    padding 0 1rem
    ul
      display flex
      padding 0
      margin 0
      li
        color $main-color
        font-size .725rem
        display block
        list-style-type none
        height $nav-height
        line-height $nav-height
        margin 0 1rem
        font-weight bolder
        &.active
          border-bottom 2px solid black
        &:hover
          opacity .5
        a
          display block
          height auto
  #articles
    overflow-y auto
    article
      padding 20px
      border-bottom 1px solid $border-color
      .article__title
        margin 10px 0
        & > a
          color $main-color
        & > a:hover
          border-bottom 1px solid $main-color
      .article__content
        color inherit
        font-size 14px
      .article__info
        color #bbb
        font-size 12px
        margin-top 15px
        display flex
        align-items center
        & > span
          margin-right 30px
        & ul
          margin 0
          padding 0
          display inline-block
          vertical-align bottom
          li
            float left
            list-style-type none
            margin-right 10px
    &:last-child
      border-bottom: 0
  #archives
    margin-right $body-margin
  #page
    overflow-y auto
    padding 1em 2em
    ul
      display flex
      flex-wrap wrap
    li
      flex-basis 50%
      list-style-type decimal-leading-zero
  #post
    overflow-y auto
    padding-right $body-margin
    .article-content
      color inherit
    .article-date
      margin-bottom 12px
    .tags
      border-top 1px solid $border-color
      padding 10px 0
      margin 10px 0
    #disqus_thread
      margin-right $body-margin




.paginator
  margin 2em 0
  text-align center
  position relative
  a, span
    user-select none
    display inline-block
    padding: 5px 10px;
    margin: 0 10px;
    border-radius: 999em;
    border 1px solid $border-color
  a:hover
      border 1px solid $main-color
  .prev
    position absolute
    left 0
  .next
    position absolute
    right 0



@keyframes slowShow
  0%
    transform translateY(-5px)
    opacity 0
@keyframes slideToLeft
  0%
    transform translateX(100px)



@media screen and (min-width: 700px)
  #sidebar
    animation slideToLeft 1s
@media screen and (max-width: 700px)
  body
    height initial
    flex-direction column
  #sidebar
    width auto
    padding-top 100px
    #site_description
      margin 1em 0
    #copyright
      display none
  main
    & > *:nth-child(2)
      margin-left 0
      height inherit !important
      min-height 600px
    nav
      position fixed
      width 100%
      top 0
      padding 0 10px
    #post
      margin 0 $body-margin
      padding 0
      #disqus_thread
        margin-right 0
